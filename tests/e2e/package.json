{
  "name": "local-life-service-e2e-tests",
  "version": "1.0.0",
  "description": "本地生活服务应用 E2E 测试套件",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:user-app": "jest --testPathPattern=user-app",
    "test:merchant-app": "jest --testPathPattern=merchant-app",
    "test:parallel": "jest --maxWorkers=2",
    "test:debug": "jest --detectOpenHandles --forceExit"
  },
  "dependencies": {
    "puppeteer": "^21.5.2",
    "jest-puppeteer": "^9.0.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/puppeteer": "^7.0.4",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "jest-puppeteer",
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/**/*.e2e.test.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "collectCoverageFrom": [
      "<rootDir>/**/*.{ts,js}",
      "!<rootDir>/node_modules/**",
      "!<rootDir>/dist/**",
      "!<rootDir>/coverage/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/setup.ts"
    ],
    "testTimeout": 60000,
    "globalSetup": "<rootDir>/global-setup.ts",
    "globalTeardown": "<rootDir>/global-teardown.ts"
  }
}
